<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/lang
http://www.springframework.org/schema/lang/spring-lang-4.0.xsd">

    <bean id="cocount" class="com.kirill.classes.dynamicComponents.Cocount">
        <property name="lime" ref="limeId"/>
    </bean>


    <lang:groovy id="limeId" script-source="classpath:scripting/Groovy.groovy"/>
</beans>